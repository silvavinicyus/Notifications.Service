generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Notification {
  id          String    @id
  content     String
  category    String
  recipientId String
  readAt      DateTime?
  createdAt   DateTime  @default(now())

  @@index([recipientId])
}
